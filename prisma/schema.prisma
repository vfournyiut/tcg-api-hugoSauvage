generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum PokemonType {
  Normal
  Fire
  Water
  Electric
  Grass
  Ice
  Fighting
  Poison
  Ground
  Flying
  Psychic
  Bug
  Rock
  Ghost
  Dragon
  Dark
  Steel
  Fairy
}

model Card {
  id            Int         @id @default(autoincrement())
  name          String
  hp            Int
  attack        Int
  type          PokemonType
  pokedexNumber Int
  imgUrl        String?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  decks     DeckCard[]  // Relation avec DeckCard
}

model Deck {
  id        Int        @id @default(autoincrement())
  name      String
  user      User       @relation(fields: [userId], references: [id])
  userId    Int
  cards     DeckCard[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model DeckCard {
  id      Int   @id @default(autoincrement())
  deck    Deck  @relation(fields: [deckId], references: [id])
  deckId  Int
  card    Card  @relation(fields: [cardId], references: [id])
  cardId  Int
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  email     String   @unique
  password  String
  decks     Deck[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
